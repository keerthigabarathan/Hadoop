// Method Overriding
class Vehicle{
def getNumberOfWheels()={
println(0)
}
}

class Car extends Vehicle{
override def getNumberOfWheels()={
println(4)
}
}

class Bike extends Vehicle{
override def getNumberOfWheels()={
println(2)
}
}

class Auto extends Vehicle{
override def getNumberOfWheels()={
println(3)
}
}


var c=new Car();
c.getNumberOfWheels()
var b=new Bike();
b.getNumberOfWheels()
var a=new Auto()
a.getNumberOfWheels()


