// Throws Annotation
@throws(classOf[ArithmeticException])
def div(a:Int,b:Int ):Float={
a/b
}


// Without Lazy

val geeks = List(1, 2, 3, 4, 5)
val output = geeks.map(l=> l*2)
println(output)


// With Lazy
val geeks = List(1, 2, 3, 4, 5)
lazy val output2 = geeks.map(l=> l*2)
println(output2)
