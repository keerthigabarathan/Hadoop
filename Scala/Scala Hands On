// You can give parameters default values
def getSum( num1:Int = 1, num2:Int = 1) : Int = {
  return num1 + num2
}
println("Default = " + getSum())
println("5 + 4 = " + getSum(5,4))
// you can use named arguments
println("5 + 4 = " + getSum(num2=5, num1=4))

