// Exception

def div(a:Int,b:Int ):Float={
 a/b
}

div(1,0)


// Try Catch Block

def div(a:Int,b:Int ):Float={
try{
a/b
}
catch{
case e:ArithmeticException=> println(e)
}
0
}

div(1,0)



// Finally

def div(a:Int,b:Int ):Float={
try{
a/b
}
catch{
case e:ArithmeticException=> println(e)
}
finally{
println ("This will print no matter of exception")
}
0
}

div(1,0)


