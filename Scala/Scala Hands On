//Concatenating Lists

val fruit1 = "apples" :: ("oranges" :: ("pears" :: Nil))
val fruit2 = "mangoes" :: ("banana" :: Nil)
var fruit = fruit1 ::: fruit2
println(fruit)
println( "After reverse fruit : " + fruit.reverse )
val fruitconc = fruit1.:::(fruit2)
println(fruitconc)

val fruitconc1 = List.concat(fruit1, fruit2)
println(fruitconc1)


